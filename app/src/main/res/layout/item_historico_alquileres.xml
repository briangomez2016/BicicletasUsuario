<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_historico_alquileres"
    xmlns:tools="http://schemas.android.com/apk/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#CCC"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF"
        android:orientation="horizontal"
        android:layout_margin="2dp">

        <TextView
            android:id="@+id/parada"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Museo"
            android:layout_gravity="center_vertical"
            android:textSize="20dp"
            android:background="@drawable/fondo_gris_redondeado"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/idBici"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_gravity="center_vertical"
            android:textSize="20dp"
            android:background="@drawable/fondo_gris_redondeado"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:textAlignment="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/horaInicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2018-06-27 12:00"
                android:textAlignment="center"
                android:textSize="18sp"
                android:background="@drawable/fondo_gris_redondeado"
                android:layout_margin="2dp"/>
            <TextView
                android:id="@+id/horaFin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2018-06-29 20:00"
                android:textAlignment="center"
                android:textSize="18sp"
                android:background="@drawable/fondo_gris_redondeado"
                android:layout_margin="2dp"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>