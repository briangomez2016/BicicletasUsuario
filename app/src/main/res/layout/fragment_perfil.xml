<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivImagen"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@drawable/ic_user_def"
                android:layout_marginVertical="10px"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="5dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvEtiquetaCed"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="Cédula:"/>

                <TextView
                    android:id="@+id/tvCedula"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:layout_height="match_parent"
                    android:text="x.xxx.xxx-x"/>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/linea_entre_medio"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="5dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="Nombre:"/>

                <TextView
                    android:id="@+id/tvNombre"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:layout_height="match_parent"
                    android:text=""/>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/linea_entre_medio"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="5dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="Correo:"/>

                <TextView
                    android:id="@+id/tvCorreo"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:layout_height="match_parent"
                    android:text="ejemplo@correo.com"/>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/linea_entre_medio"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="5dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="Teléfono:"/>

                <TextView
                    android:id="@+id/tvTelefono"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:layout_height="match_parent"
                    android:text="xxxx xxxx"/>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/linea_entre_medio"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="5dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="Dirección:"/>

                <TextView
                    android:id="@+id/tvDireccion"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:layout_height="match_parent"
                    android:text=""/>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/linea_entre_medio"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="5dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="Activo:"/>

                <TextView
                    android:id="@+id/tvActivo"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:layout_height="match_parent"
                    android:text=""/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/fondo_saldo"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvSaldo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_weight="2"
                    android:text="Saldo: $1000"
                    android:textAlignment="center"
                    android:textColor="#FFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spPrecios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="50dp"
                    android:layout_marginVertical="10dp"
                    android:entries="@array/precios">

                </Spinner>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/btnComprarCreditos"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/fondo_boton_compra"
                        android:text="Cargar"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold" />

                    <ProgressBar
                        android:id="@+id/progressBarCargar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:visibility="gone"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>
                </FrameLayout>


                <Button
                    android:id="@+id/btnEditarPerfil"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/fondo_boton_compra"
                    android:text="Editar Perfil"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>